
#*************** RANDOM PASSWORD GENERATOR - Mini Project *****************#

# This project will give us a random password of 12 characters (length can be changed any time) whenever the user asks for it.

import random 
import string

pass_len = 12

val = string.ascii_letters + string.digits + string.punctuation

ask = input("Do you want to generate a random password? (yes/no): ")

if ask.lower() == "yes":
    print("Your unique password is: ", end="")
    for i in range(pass_len):
        print(random.choice(val), end="")

else:
    print("Okay, maybe next time!")


# This can also be implemented using a list comprehension:
# solution:
# password = "".join(random.choice(val) for i in range(pass_len))
# print(password)
